{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "module": "commonjs",
    "target": "es2018",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "types",
    "outDir": "lib",
    "lib": ["es2018.promise", "dom"],
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "test"]
}
